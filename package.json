{
  "name": "@nodevisor/root",
  "description": "Server Management and Scalable Application Deployment",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "url": "https://github.com/nodevisor/nodevisor"
  },
  "scripts": {
    "prettier": "prettier --write src/**/*.ts test/**/*.ts",
    "build": "lerna run build",
    "build:nodevisor": "lerna run build --scope=nodevisor --include-dependencies",
    "test": "lerna run test",
    "test:nodevisor": "lerna run test --scope=nodevisor --include-dependencies"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.1.8",
    "prettier": "^3.3.3"
  }
}
